<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="800" Width="840">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#aec4df">
            <Button Content="Главная" Width="170" Height="40" Margin="5"/>
            <Button Content="Провиль" Width="170" Height="40" Margin="5"/>
            <Button Content="Настройки" Width="170" Height="40" Margin="5"/>
            <Button Content="Помощь" Width="170" Height="40" Margin="5"/>
        </StackPanel>

        <DockPanel DockPanel.Dock="Bottom" Background="LightGray" Height="25">
            <TextBlock Text="Готово"
               VerticalAlignment="Center"
               Margin="5,0"
               HorizontalAlignment="Left"/>
        </DockPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Height="220" Width="180" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="1" Content="Загрузить фото" Height="20" Margin="10"/>
                </Grid>
            </Border>
            
            <Grid Grid.Row="0" Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="ФИО:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Email:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Телефон:" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Дата рождения:" VerticalAlignment="Center" Margin="0,5"/>
                <DatePicker Grid.Row="3" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Пол:" VerticalAlignment="Top" Margin="0,5"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5" VerticalAlignment="Top">
                    <RadioButton Content="Мужской" Margin="5,0"/>
                    <RadioButton Content="Женский" Margin="5,0"/>
                </StackPanel>

                <Label Grid.Row="5" Grid.Column="0" Content="Пароль:" VerticalAlignment="Center" Margin="0,5"/>
                <PasswordBox Grid.Row="5" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>

                <Label Grid.Row="6" Grid.Column="0" Content="Подтверждение пароля:" VerticalAlignment="Center" Margin="0,5"/>
                <PasswordBox Grid.Row="6" Grid.Column="1" Width="200" Margin="0,5" VerticalContentAlignment="Center"/>
            </Grid>

            <WrapPanel Grid.Row="1" Grid.ColumnSpan="2" Background="#f5f5f5" Margin="5" Orientation="Vertical">
                <TextBlock Text="* Пароль должен содержать минимум 8 символов." Margin="5"/>
                <TextBlock Text="* Email должен быть в формате name@mail.com." Margin="5"/>
                <TextBlock Text="* Все поля обязательны." Margin="5"/>
            </WrapPanel>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Зарегистрироваться" Width="150" Margin="5"/>
                <Button Content="Отмена" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>