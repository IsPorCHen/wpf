<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Регистрация нового пользователя" Height="800" Width="840">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#aec4df">
            <Button Content="Главная" Width="170" Height="40" Margin="5"/>
            <Button Content="Провиль" Width="170" Height="40" Margin="5"/>
            <Button Content="Настройки" Width="170" Height="40" Margin="5"/>
            <Button Content="Помощь" Width="170" Height="40" Margin="5"/>
        </StackPanel>

        <DockPanel DockPanel.Dock="Bottom" Background="LightGray" Height="30">
            <TextBlock Text="Готово"
               VerticalAlignment="Center"
               Margin="5,0"
               HorizontalAlignment="Left"/>
        </DockPanel>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Height="220" Width="180" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="1" Content="Загрузить фото" Height="20" Margin="10"/>
                </Grid>
            </Border>

            <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="52"/>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="129*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ФИО:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="5,5,5,5" Height="25" Grid.ColumnSpan="3"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <TextBox Grid.Row="1" Grid.Column="3" Margin="5,5,5,5" Height="25" Grid.ColumnSpan="3"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Телефон:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <TextBox Grid.Row="2" Grid.Column="3" Margin="5,5,5,5" Height="25" Grid.ColumnSpan="3"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата рождения:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" Margin="5,5,5,5" Grid.ColumnSpan="3">
                    <DatePicker Grid.Row="3" Grid.Column="1" Height="25" HorizontalAlignment="Left" Width="218"/>
                </StackPanel>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Пол:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" Margin="10,5,5,5" Grid.ColumnSpan="3">
                    <RadioButton Content="Мужской" GroupName="Gender" Margin="0,0,10,0"/>
                    <RadioButton Content="Женский" GroupName="Gender"/>
                </StackPanel>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Пароль:" VerticalAlignment="Center" Grid.ColumnSpan="3"/>
                <PasswordBox Grid.Row="5" Grid.Column="3" Margin="5,5,5,5" Height="25" Grid.ColumnSpan="3"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Подтверждение пароля:" VerticalAlignment="Center" Grid.ColumnSpan="4"/>
                <PasswordBox Grid.Row="6" Grid.Column="3" Margin="50,5,5,5" Height="25" Grid.ColumnSpan="3"/>
            </Grid>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Background="#f5f5f5" Margin="10,20,10,10">
                <TextBlock Text="* Пароль должен содержать минимум 8 символов." Margin="5"/>

                <DockPanel Margin="5">
                    <TextBlock Text="* Email должен быть в формате name@mail.com." DockPanel.Dock="Left"/>
                    <TextBlock Text="* Все поля обязательны." Margin="10,0,0,0" DockPanel.Dock="Left"/>
                </DockPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                <Button Content="Зарегистрироваться" Width="150" Margin="5"/>
                <Button Content="Отмена" Width="100" Margin="5"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>